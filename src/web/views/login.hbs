<form
   action="/login"
   method="post"
   class="d-flex flex-column align-items-start"
   style="margin-top: 3rem;"
>
   <div class="mb-3" style="width: 500px;">
      <label for="exampleInputEmail1" class="form-label fs-3">Email address</label>
      <input
         type="email"
         class="form-control px-3 py-3"
         name="email"
         placeholder="sample@mail.com"
         id="exampleInputEmail1"
         aria-describedby="emailHelp"
      />
      <div id="emailHelp" class="form-text"></div>
   </div>
   <div class="mb-3" style="width: 500px;">
      <label
         for="exampleInputPassword1"
         class="form-label fs-3"
      >Password</label>
      <input
         type="password"
         class="form-control px-3 py-3"
         name="password"
         placeholder="e.g. secret123"
         id="exampleInputPassword1"
      />

   </div>
   <div
      class="d-flex flex-row justify-content-between align-items-center w-100"
   >
      <h5 class="text-black">Don't have an account?</h5>
      <h6>
         <a
            href="/register"
            class="text-primary"
            style="text-decoration: none;"
         >
            Sign Up now.
         </a>
      </h6>
   </div>

   <button
      type="submit"
      class="btn btn-primary btn-lg mt-3 align-self-end px-5"
   >Log in</button>
</form>